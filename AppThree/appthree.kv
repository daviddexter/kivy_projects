<PopBoxContainer@BoxLayout>:
    orientation:"vertical"
    id:popboxcontainer
    Label:
        text:"Are you sure you want to quit?"
    Button:
        text:"Yes"
<Container>:
    orientation:"vertical"
    AnchorLayout:

        Button:
            size_hint_y:None
            size_hint_x:None
            height:self.texture_size[1] + (self.texture_size[1] *2)
            width:self.texture_size[0] + (self.texture_size[0] * 2)
            text:"Quit"
            on_press:app.root.popbox()

	